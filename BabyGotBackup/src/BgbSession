import java.util.Date;
import java.util.LinkedList;


public class BgbSession {

		private LinkedList<String> fList = new LinkedList<String>();
		private String user;
		private String sessionName;
				
		
		public BgbSession(String user){
			this.user = user;
			Date date = new Date();
			this.sessionName = (user + date.getTime());
		}
		
		public LinkedList<String> getFileList(){
			return fList;
		}
		
		public void addFile(String path) throws Exception{
			if(!(fList.contains(path))){
					this.fList.add(path);
			}
		}		
		
		public void setSessionName(String name){
			this.sessionName = name;
		}
		
		public String getSessionName(){
			return sessionName;
		}
		
		
		public String getUser(){
			return this.user;
		}
}
