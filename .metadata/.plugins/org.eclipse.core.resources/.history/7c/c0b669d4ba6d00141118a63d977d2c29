		backupButton.setSize(frmBabyGotBackup.getWidth()/4, frmBabyGotBackup.getHeight());
		backupButton.setVerticalTextPosition(JButton.BOTTOM);
		backupButton.setHorizontalTextPosition(JButton.CENTER);
		
